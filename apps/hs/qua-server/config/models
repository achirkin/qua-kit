-- | Relate students in the database to edX students.
--   Assume edxUserId does not change in edX.
Student
    edxUserId Text
    name      Text Maybe
    EdxUserId edxUserId
    deriving Show

-- | Normally a course unit
EdxResource
    link         Text
    courseId     EdxCourseId
    friendlyName Text Maybe
    EdxResLink   link
    deriving Show

-- | An edX course
EdxCourse
    contextId    Text
    friendlyName Text Maybe
    EdxContextId contextId
    deriving Show

-- | Image preview will always be saved in png
ImagePreview
    content     ByteString
    fullVersion ImageId

-- | Original image submitted by a student
Image
    name        Text
    contentType Text
    data        ByteString

-- | Student submission
Story
    resource      EdxResourceId
    author        StudentId
    image         ImagePreviewId
    place         PlaceId
    comment       Text
    edxOutcomeUrl Text Maybe
    edxResultId   Text Maybe
    creationTime  UTCTime default=CURRENT_TIMESTAMP

Country
    fips   Text sqltype=varchar(2)
    iso    Text sqltype=varchar(2)
    domain Text sqltype=varchar(3)
    name   Text
    FipsCode fips
    IsoCode iso

Place
    geonameId      Int
    country        CountryId
    name           Text
    asciiName      Text
    alternateNames Text
    latitude       Double
    longitude      Double
    GeonameId      geonameId
